<h3>Edit yr profile</h3>
<hr>
<div class="form-wrapper">
  <%= form_for([@user, @profile], url: user_profile_path(@user)) do |f| %>
    <% if @profile.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% for message in @profile.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <%= f.label :favorite_fruit %>
    <%= f.text_field :favorite_fruit %>
    <%= f.label :biography %>
    <%= f.text_area :biography %>
    <%= f.label :url %>
    <%= f.text_field :url %>
    
    <%= f.submit "Done", :class => "button" %>
  <% end %>
</div>