<div class="form-wrapper">
  <%= form_for @product do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>
    <%= f.label :price_in_cents %>
    <%= f.text_field :price_in_cents %>
    <br>
    <%= f.label :url %>
    <%= f.text_field :url %>
    <br>
    <%= f.submit "Submit", :class => 'button' %>
  <% end %>
</div>