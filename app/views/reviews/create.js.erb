<% if @review.errors.present? %>
  $("#review-form-errors").html("<%= escape_javascript(render :partial => 'products/review_form_errors') %>");
<% else %>
  $("#review-form-errors").html("");
  // $("#review-list").html("<%= escape_javascript(render :partial => 'products/review_list') %>");

  $("#review-list").append('
      <% review = @review %>
      <div class="review-wrapper>
        <p><%= escape_javascript(review.content) %></p>
        <p><%= review.rating %></p>
        <p>Posted by: <em><%= escape_javascript(review.user.email) %></em></p>
      </div>
    ');
  $("#new_review")[0].reset();
<% end %>
    
  
  

