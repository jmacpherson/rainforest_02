<div class="form-container">
  <h2 class="centered">Sign In</h2>
  <div class="form-wrapper">
    <%= form_tag sessions_path do %>
      <div class="field">
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </div>
      <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <%= submit_tag "Log In", :class => "button" %>
    <% end %>
  </div>
</div>

